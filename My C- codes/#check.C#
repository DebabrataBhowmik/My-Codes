Double_t myfunction(Double_t *x, Double_t *par)
{
  Float_t xx ;
  Double_t f = par[0]*exp(-0.5*((xx-par[1])/par[2])**2);
  return f; 
}

//cout<< myfunction(3) <<endl;    

  void check()
  {
    TF1 *f1 = new TF1("myfunc",myfunction,-5,5,3);
    f1->SetParameters(4000,0,1);
    //    f1->SetParNames("constant","coefficient","ggg");
    f1->Draw();
  } 

