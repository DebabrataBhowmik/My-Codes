  //Double_t myFunc(double x) { return x+sin(x); }
  /*
  double  A, mu, sigma2;
  Double_t myFunc(double x, A,mu,sigma2) {return A*exp(-0.5*((x-mu)/sigma2)**2); }
  A=4000.0;
  mu=0.0;
